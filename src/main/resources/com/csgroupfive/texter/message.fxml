<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<!-- Made with SceneBuilder -->

<AnchorPane fx:id="ap_main" prefHeight="500.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.csgroupfive.texter.controllers.MessageController">
   <children>
       <VBox layoutX="352.0" prefHeight="551.0" prefWidth="500.0">
           <children>
               <TextArea fx:id="recipientsArea" minHeight="50.0" prefHeight="50.0" prefWidth="500.0" promptText="To..." styleClass="center-left-text" wrapText="true" />
               <TextArea fx:id="subjectArea" minHeight="50.0" prefHeight="50.0" prefWidth="500.0" promptText="Subject..." styleClass="center-left-text" wrapText="true">
                   <font>
                       <Font name="System Bold" size="12.0" />
                   </font>
               </TextArea>
               <TextArea fx:id="messageArea" prefHeight="400.0" prefWidth="500.0" wrapText="true" />
               <HBox fx:id="btn_box" alignment="CENTER" prefHeight="163.0" prefWidth="500.0" style="-fx-background-color: white;">
                   <children>


                       <Button fx:id="newMsgButton" mnemonicParsing="false" onAction="#onNewMessage" prefHeight="35.0" prefWidth="110.0" text="New Message">
                           <HBox.margin>
                               <Insets right="10.0" />
                           </HBox.margin>
                       </Button>

                       <Button fx:id="clearbutton" mnemonicParsing="false" prefHeight="35.0" prefWidth="110.0" text="Clear">
                           <HBox.margin>
                               <Insets right="10.0" />
                           </HBox.margin>
                       </Button>
                       <Button fx:id="savebutton" mnemonicParsing="false" prefHeight="35.0" prefWidth="110.0" text="Save">
                           <HBox.margin>
                               <Insets right="10.0" />
                           </HBox.margin>
                       </Button>
                       <Button fx:id="sendButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="110.0" text="Send">
                           <HBox.margin>
                               <Insets />
                           </HBox.margin>
                       </Button>
                   </children>
               </HBox>
           </children>
       </VBox>
      <VBox layoutX="39.0" prefHeight="551.0" prefWidth="313.0">
         <children>
            <Label fx:id="savemsg_lbl" alignment="CENTER" prefHeight="35.0" prefWidth="318.0" text="Saved Messages" textFill="#132a13" />
             <ScrollPane fx:id="sp_main" fitToWidth="true" hbarPolicy="NEVER" prefHeight="518.0" prefWidth="320.0" vbarPolicy="ALWAYS">
                 <content>
                     <VBox fx:id="vbox_msg" />
                 </content>
             </ScrollPane>
         </children>
      </VBox>
       <VBox fx:id="side_bar" alignment="TOP_CENTER" layoutX="-2.0" prefHeight="551.0" prefWidth="40.0" stylesheets="@css/main.css" />
        </children>
</AnchorPane>
